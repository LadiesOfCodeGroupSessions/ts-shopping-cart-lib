{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es6"],
    "rootDir": "./",
    "outDir": "build",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": [
    "node_modules",
    "src/test*"]
}
